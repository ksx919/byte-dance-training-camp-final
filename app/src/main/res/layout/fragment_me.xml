<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 1. 顶部侧边栏菜单 (汉堡图标) -->
    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_menu"
        app:tint="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <!-- 2. 头像 (左侧大图) -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatar"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleStyle"
        app:strokeColor="#1A000000"
        app:strokeWidth="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_menu" />

    <!-- 3. 昵称 -->
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="RedNote用户"
        android:textColor="#333333"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

    <!-- 4. 小红书号 -->
    <TextView
        android:id="@+id/tv_red_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="小红书号：123456789"
        android:textColor="#999999"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/tv_nickname"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname" />

    <!-- 5. 简介 -->
    <TextView
        android:id="@+id/tv_bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="这里是个人简介，点击编辑资料可以修改。\n分享生活，记录美好。"
        android:textColor="#333333"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar" />

    <!-- 6. 数据栏 (关注/粉丝/获赞与收藏) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bio">

        <!-- 关注 -->
        <TextView
            android:id="@+id/tv_following_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_following_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="关注"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tv_following_count"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_following_count"/>

        <!-- 粉丝 -->
        <TextView
            android:id="@+id/tv_follower_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="358"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tv_following_label"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_following_count"/>
        <TextView
            android:id="@+id/tv_follower_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="粉丝"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tv_follower_count"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_following_count"/>

        <!-- 获赞与收藏 -->
        <TextView
            android:id="@+id/tv_liked_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="2.1万"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tv_follower_label"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_following_count"/>
        <TextView
            android:id="@+id/tv_liked_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="获赞与收藏"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tv_liked_count"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_following_count"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 7. 按钮组 (编辑资料 & 退出登录) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_stats">

        <!-- 编辑资料 -->
        <TextView
            android:id="@+id/btn_edit_profile"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_gray_capsule"
            android:gravity="center"
            android:text="编辑资料"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_logout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"/>

        <!-- 退出登录 -->
        <TextView
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_gray_capsule"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/btn_edit_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 8. 底部 Tab 占位 (笔记/收藏/赞过) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_buttons">

        <TextView
            android:id="@+id/tv_tab_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笔记"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 红色指示点 -->
        <View
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginStart="-12dp"
            android:layout_marginBottom="-12dp"
            android:background="#FF2442"
            app:layout_constraintStart_toEndOf="@id/tv_tab_notes"
            app:layout_constraintBottom_toBottomOf="@id/tv_tab_notes"/>

        <TextView
            android:id="@+id/tv_tab_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="收藏"
            android:textColor="#999999"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tv_tab_notes"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_tab_notes"/>

        <TextView
            android:id="@+id/tv_tab_liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="赞过"
            android:textColor="#999999"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tv_tab_collect"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_tab_notes"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 底部内容占位 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FAFAFA"
        app:layout_constraintTop_toBottomOf="@+id/layout_buttons"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>