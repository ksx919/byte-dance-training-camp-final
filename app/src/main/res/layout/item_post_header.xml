<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <!-- 1. 图片轮播区域 (放在最上面) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpImages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 计数器 (右上角) -->
    <TextView
        android:id="@+id/tvImgIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_indicator_bg"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text="1/1"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/vpImages"
        app:layout_constraintEnd_toEndOf="@id/vpImages"
        tools:visibility="visible" />

    <!-- 底部小圆点指示器 (截图中似乎也有，如果需要可以加 TabLayout，这里暂保留右上角数字) -->

    <!-- 2. 标题 (在图片下方) -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="4dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vpImages"
        tools:text="在广州会常去的一家咖啡店☕️" />

    <!-- 3. 正文内容 -->
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="是客人是朋友\n咖啡店存在的意义\n不单是一杯咖啡..." />

    <!-- 3.1 正文骨架屏 (Skeleton) -->
    <LinearLayout
        android:id="@+id/llContentSkeleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_skeleton_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_skeleton_gray" />

        <View
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:background="@drawable/bg_skeleton_gray" />
    </LinearLayout>

    <!-- 4. 发布时间/底部信息 -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvContent"
        tools:text="11-29" />

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#F8F8F8"
        app:layout_constraintTop_toBottomOf="@id/tvDate"/>

</androidx.constraintlayout.widget.ConstraintLayout>