<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_reply_avatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImageStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/darker_gray" />

    <TextView
        android:id="@+id/tv_reply_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_reply_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_reply_avatar"
        tools:text="UserB" />

    <TextView
        android:id="@+id/tv_reply_author_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_author_tag"
        android:paddingHorizontal="4dp"
        android:paddingVertical="1dp"
        android:text="作者"
        android:textColor="#FF2442"
        android:textSize="9sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_reply_username"
        app:layout_constraintStart_toEndOf="@id/tv_reply_username"
        app:layout_constraintTop_toTopOf="@id/tv_reply_username"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_reply_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="2dp"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/ll_reply_like_container"
        app:layout_constraintStart_toStartOf="@id/tv_reply_username"
        app:layout_constraintTop_toBottomOf="@id/tv_reply_username"
        tools:text="This is a reply content." />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_reply_image"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:shapeAppearanceOverlay="@style/RoundedImageStyle"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/tv_reply_username"
        app:layout_constraintTop_toBottomOf="@id/tv_reply_content"
        tools:layout_height="160dp"
        tools:layout_width="160dp"
        tools:src="@color/darker_gray"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_reply_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#999999"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/tv_reply_username"
        app:layout_constraintTop_toBottomOf="@id/iv_reply_image"
        tools:text="11-02 Shanghai Reply" />

    <LinearLayout
        android:id="@+id/ll_reply_like_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_reply_like"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_favorite"
            app:tint="#999999" />

        <TextView
            android:id="@+id/tv_reply_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="#999999"
            android:textSize="9sp"
            tools:text="5" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
